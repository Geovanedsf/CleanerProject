<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginFragment">

    <EditText
        android:id="@+id/textEmailLogin"
        android:layout_width="385dp"
        android:layout_height="55dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:gravity="center"
        android:hint="E-mail"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:text="123"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textPasswordLogin"
        android:layout_width="385dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:text="123"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textEmailLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textEmailLogin"
        app:layout_constraintTop_toBottomOf="@+id/textEmailLogin" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="156dp"
        android:layout_height="68dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="@color/black"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/textPasswordLogin"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/textPasswordLogin"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordLogin" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="156dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/black"
        android:text="Cadastre-se"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/buttonLogin"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />


</androidx.constraintlayout.widget.ConstraintLayout>